<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" type="text/css" href="/assets/index.css">
</head>
<body>
	<div id = "header">
		<a class = "menuItem" href = "/login">
			<% if(!user) { %> Log in <% } else { %> Log out <% } %>
		</a>
		</a>
		<a class = "menuItem" href = "/catalog">Catalog</a>
		<a class = "menuItem" href = "/buy">Bucket</a>
		<% if(admin) { %><a href = "/admin" class = "menuItem"><%= user %></a> <% } else 
		{ %> <h1 class = "menuItem"><%= user %></h1> <% } %>
		
	</div>
	<div id ="content">
		<table caption = "Ctalog" class="steelBlueCols">
			<tr>
				<th>Image</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
			</tr>
			
			<% for(var i = 0;i<store.length;++i) { var m = "/assets/"+store[i].img; console.log(m); %>
			<tr>
				<td>
					<img src = <%= "/assets/"+store[i].img %> class = "ico" >
					<br/>
					<% if(!total) { %><a href = <%= "/buy?id="+store[i].id+"&act=delete" %> class = "button">Delete</a><% } %>
					
				</td>
				<td><%= store[i].name %></td>
				<td><%= store[i].description %></td>
				<td><%= store[i].price %></td>
			</tr>
			<% } %>
		</table>
		<% if(!total) { %><a href = "/buy?act=buy" class = "button">Buy all</a><% } %>
	</div>
	<div id = "header">
	</div>

</body>
</html>